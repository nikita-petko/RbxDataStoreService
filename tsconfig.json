{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"jsx": "react",
		"outDir": "lib",
		"rootDir": "src",
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"preserveSymlinks": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"stripInternal": true,
		"declaration": true,
		"removeComments": false,
		"declarationDir": "lib/types",
	}
}
